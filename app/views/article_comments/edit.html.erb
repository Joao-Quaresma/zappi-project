<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <div class="panel panel-success">
      <div class="panel-heading">
        <div align="center">
          <h3><strong>Edit comment</strong></h1>
        </div>
      </div>
      <div class="panel-body">
        <%= form_for ([@article, @article_comment]) do |f| %>
          <div class="container-fluid">
            <div class="form-group text-center">
              <div class ="form-group">
                <div class="col-xs-12">
                  <%= md_simple_editor do %>
                    <%= f.text_area :body, data: {behavior: "autocomplete"}, rows: 4, class: "form-control", placeholder: "Write the post here" %>
                  <% end %>
                </div>
              </div>
              <div align ="center" class="comment-actions col-xs-12">
                <%= f.button "Update comment".html_safe, class: 'btn-success btn-block', data: {disable_with: "<i class='fa fa-circle-notch fa-spin'></i> Updating..."} %>
              </div>
            </div>
          </div>  
        <% end %>
      </div>
    </div>
  </div>  
</div>  
