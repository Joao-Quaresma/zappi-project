<% if params[:action] == 'search' %>
  <div class="results-blck">
    <%= bootstrap_flash %>
  </div>
<% end %>  

<% if @announcement %>
    <div id="announcement-search-results" class="well results-blocks col-xs-10 col col-xs-offset-1">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Categories</th>
            <th>Title</th>
          </tr>
        </thead>
        <tbody>
          <% @announcement.each do |announcement| %>
            <tr>
              <td><%= render announcement.categories %></td>
              <td><%= link_to announcement.title, announcement %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<% end %>