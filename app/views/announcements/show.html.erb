<h2 align="center"><%= @announcement.title %></h2>
  <div class="well col-xs-8 col-xs-offset-2">
     <% if @announcement.user %>
     <ul class="listing">
      <div class align="center">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <li>Created by:</li>
            <li><%= profile_avatar_select(@announcement.user) %></li>
            <li class="announcement-title">
              <%= link_to @announcement.user.username, user_path(@announcement.user) %>
            </li>
            <li><small>
              <%= pluralize(@announcement.user.announcements.count, "Wiki post") if @announcement.user.announcements %><br>
              <%= pluralize(@announcement.user.articles.count, "Announcement") if @announcement.user.articles %><br>
              <%= pluralize(@announcement.user.socialposts.count, "Social Post") if @announcement.user.socialposts %>
            </small></li>
          </div>
        </div>
      </div>
    </ul>
    <% end %>
    <% if @announcement.categories.any? %>
    <hr>
      <p><strong>Categories: </strong><%= render @announcement.categories %></p>
    <hr>
    <% end %>
    <h4 align="center" class="description"><strong>Description:</strong></h4>
    
      <div style="word-wrap: break-word; overflow-y: hidden;">
        <%= simple_format(@announcement.description) %>
      </div>
    <hr>
    <h4 align="center" class="body"><strong>Post:</strong></h4>
    
      <div style="word-wrap: break-word; overflow-y: hidden;">
        <%= simple_format(@announcement.body) %>
      </div>
    <hr>
    <div class="announcement-actions">
    <!-- just to make sure that no one can edit or delet if not signed in-->
    <% if user_signed_in? %>
      <%= link_to "Back to Announcements", announcement_path, class: "btn btn-xs btn-success" %>
      <%= link_to "Edit this Announcement", edit_announcement_path(@announcement), class: "btn btn-xs btn-primary" %>
      <% if current_user == @announcement.user || current_user.admin? %>
        <%= link_to "Delete this Announcement", article_path(@announcement), method: :delete, 
                                                                  data: { confirm: "Are you sure you want to delete this Announcement?"}, 
                                                                  class: "btn btn-xs btn-danger" %>
      <% end %>
     <% end %>
    </div>
  </div>  
  