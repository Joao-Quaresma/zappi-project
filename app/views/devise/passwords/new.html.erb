<body class="welcome">
  <div class="login-registration-bg col-xs-12">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
          <div class="log-in panel">
            <div class="panel-heading">
              <h2>Forgot your password?</h2>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  				<%= f.error_notification %>
              <div class="panel-body">
                <%= f.input :email, required: true, autofocus: true %>
                <%= f.button :button, "Send me reset password instructions".html_safe, class: 'btn-info btn-block', data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Sending..."} %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
