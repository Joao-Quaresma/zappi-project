
<%= render 'search' %>

<div class="row">
  <div id="users" class="results-blocks col-md-10 col-md-offset-1 col-xs-12">
    <div class="panel panel-info users-table">
      <!-- Default panel contents -->
      <div class="panel-heading">
        <div align="center">
          <h1>All users</h1>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="col-xs-3">Username</th>
              <th class="col-xs-3">Email</th>
              <th class="col-xs-2">First name</th>
              <th class="col-xs-2">Last name</th>
              <th class="col-xs-2">Role</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tbody>
              <tr>
                <td class="col-xs-3"><%= link_to user.username, user %></td>
                <td class="col-xs-3"><%= user.email %></td>
                <td class="col-xs-2">
                  <% if user.first_name? %>
                    <%= user.first_name %>
                  <% else %>
                    ------
                  <% end %>
                </td>
                <td class="col-xs-2">
                  <% if user.last_name? %>
                    <%= user.last_name %>
                  <% else %>
                    ------
                  <% end %>
                </td>
                <td class="col-xs-2"><%= user.role %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>


