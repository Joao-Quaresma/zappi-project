<% if params[:action] == 'search' %>
  <div class="results-blck">
    <%= bootstrap_flash %>
  </div>
<% end %>  

<% if @faq %>
    <div id="faq-search-results" class="row results-blocks col-xs-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="col-xs-8">Title</th>
            <th class="col-xs-4">Categories</th>
          </tr>
        </thead>
        <tbody>
          <% @faq.each do |faq| %>
            <tr>
              <td class="col-xs-8"><%= link_to faq.title, faq %></td>
              <td class="col-xs-4"><%= render faq.categories %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<% end %>