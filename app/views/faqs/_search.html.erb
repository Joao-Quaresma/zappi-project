<div class="row">
  <div class="col-xs-12 col-xs-offset-0 col-md-10 col-md-offset-1">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div align="center">
          <strong><h3>Search FAQ's</h3></strong>
        </div>
      </div>
      <div class="panel-body">
        <%= form_tag faq_search_results_path, remote: true, method: :get, id: 'faq-post-search-form' do %>
          <div class="form-group row no-padding text-center col-xs-12">
            <div class="col-xs-6 col-xs-offset-3">
              <%= text_field_tag :search_param, params[:search_param], 
                    placeholder: "Enter title or description", autofocus: true, 
                    class: "form-control search-box input-lg" %>
            </div>
            <div class="col-xs-1">
              <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
                <i class="fa fa-search"></i> Search
              <% end %>
            </div>
          </div>
        <% end %>
        <div id="results">
          <%= render 'faqs/result' %>
        </div>
      </div>
    </div>
  </div>
</div>