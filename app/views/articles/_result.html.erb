<% if params[:action] == 'search' %>
  <div class="results-blck">
    <%= bootstrap_flash %>
  </div>
<% end %>  

<% if @article %>
    <div id="article-search-results" class="well results-blocks col-md-10">
      <table class="search-results-table col-md-12">
        <tbody>
          <% @article.each do |article| %>
            <tr>
              <td><strong>Title: </strong> <%= link_to article.title, article %></td>
              <td><strong>Categories: </strong> <%= render article.categories %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<% end %>