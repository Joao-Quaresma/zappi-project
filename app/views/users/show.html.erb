
<h1 align="center"><%= @user.username %>'s</h1>

<% if @user.admin?  %>
  <h5 align="center">Account type: Admin</h5>
<% else %>
  <h5 align="center">Account type: User</h5>
<% end %>


<% if current_user.admin? and current_user != @user %>
  <h5 align="center"><%= link_to "Edit user Profile", edit_user_path(@user.id) %></h5>
  

  <li><%= link_to "Delete this user", user_path(@user), method: :delete, 
                  data: { confirm: "Are you sure you want to delete the user?"} %></li>
                  
<% end %>
<% if current_user == @user %>
  <h5 align="center"><%= link_to "Edit your Profile", edit_user_registration_path(current_user) %></h5>
<% end %>

