
<h1 align="center">Edit comment</h1>


<div class="row">
  <div class="well col-xs-10 col-xs-offset-1 nice-border">
      <%= form_for ([@article, @article_comment]) do |f| %>
      <div class="container-fluid">
          <div class="form-group text-center">
              <div class ="form-group">
                <div class="col-sm-14">
                  <%= f.text_area :body, data: {behavior: "autocomplete"}, rows: 4, class: "form-control", placeholder: "Write the post here" %>
                </div>
              </div>
              <div align ="center" class="comment-actions col-xs-2 col-xs-offset-5">
                <%= f.button "Update comment".html_safe, class: 'btn-success btn-block', data: {disable_with: "<i class='fa fa-circle-notch fa-spin'></i> Updating..."} %>
              </div>
          </div>
      </div>  
      <% end %>
  </div>  
</div>  
