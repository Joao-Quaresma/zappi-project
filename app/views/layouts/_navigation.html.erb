<div class="navbar navbar-inverse navbar-fixed-top mainnavebar">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".MainNav" >
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span> 
      </button>
      <%= link_to "Zappi Project", root_path, class: "navbar-brand", id: "logo" %>
    </div>
    <div class="collapse navbar-collapse MainNav">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Categories", categories_path %></li>
          <li><%= link_to "Wiki", articles_path %></li>
          <li><%= link_to "Announcements", announcements_path %></li>
          <li><%= link_to "Social Posts", socialposts_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="glyphicon glyphicon-cog" aria-hidden="true"></span></a>
