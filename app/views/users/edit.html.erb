<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= simple_form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
          <div class="container-fluid">
            <div class="form-group text-center">
              <h4>Change your profile image:</h4>
              <div class="img-circle profile-image-edit">
                <%= profile_avatar_select(@user) %>
              </div>
                <%= f.input :avatar, onChange: 'loadFile(event)' %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group text-center">
                <h4>Update your resume:</h4>
                <%= f.input :resume, label: false, input_html: { rows: 4 } %>
              </div>
            </div>
            <div class="form-group text-center col-xs-6 col-xs-offset-3">
              <%= f.button :button, "Update".html_safe, class: 'btn-success btn-block', data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Updating..."} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

