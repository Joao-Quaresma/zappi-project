<h3 align="center">Search User</h3>
<hr>
<div id="user-search">
  <%= form_tag user_search_results_path, remote: true, method: :get, id: 'user-search-form' do %>
    <div class="form-group row no-padding text-center col-md-12">
      <div class="col-md-10">
        <%= text_field_tag :search_param, params[:search_param], 
              placeholder: "Enter username, email, first or last name", autofocus: true, 
              class: "form-control search-box input-lg" %>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
          <i class="fa fa-search"></i> Search
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="results">
  <%= render 'users/result' %>
</div>
