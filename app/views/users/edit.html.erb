<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2">
    <div class="panel panel-success">
      <div class="panel-heading">
        <div align="center">
          <strong><h3>Edit profile</h3></strong>
        </div>
      </div>
      <div class="panel-body">
        <%= simple_form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
          <div class="container-fluid">
            <div class="form-group text-center">
              <div class="img-circle profile-image-edit">
                <%= profile_avatar_select(@user) %>
              </div>
              <div class="upload-profile-image" align="center">
                <%= f.input :avatar, onChange: 'loadFile(event)' %>
                </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group text-center">
                <h4>Update your resume:</h4>
                <%= f.input :resume, label: false, input_html: { rows: 4 } %>
              </div>
            </div>
            <div class="form-group text-center col-xs-4 col-xs-offset-4">
              <%= f.button :button, "Update".html_safe, class: 'btn-success btn-block', data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Updating..."} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
