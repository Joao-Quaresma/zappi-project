<body class="welcome">
  <div class="login-registration-bg col-xs-12">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
          <div class="log-in panel">
            <div class="panel-heading">
              <h2>Change your password</h2>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>
              <%= f.input :reset_password_token, as: :hidden %>
              <%= f.full_error :reset_password_token %>
              <div class="panel-body">
                <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
                <%= f.button :button, "Change password".html_safe, class: 'btn-info btn-block', data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Changing password..."} %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
