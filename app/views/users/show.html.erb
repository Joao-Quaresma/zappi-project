<h1 align="center"><%= @user.username + "'s profile"%></h1>

<div class="posts-wrapper">
  <div class="well border-profile">
  <div class="row profile-header">
    <div class="col-md-6">
      <div class="img-circle avatar-image">
        <%= profile_avatar_select(@user) %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="user-name">
        <h5 class="account-type">
          <% if @user.admin?  %>
            Account type: Admin
          <% else %>
              Account type: User
          <% end %>
        </h5>
        <% if @user.first_name.present? and @user.last_name.present? %>
        <h5 class="user-first-last-name">
          Name: <%= @user.first_name %> <%= @user.last_name %>
        </h5>
        <% end %>
        <h5 class="role">
          Role: <%= @user.role %>
        </h5>
        <h5 class="job-title">
          Job title: <%= @user.job_role %>
        </h5>
        <div class="details" align="left">
          <small align="center">
            <%= link_to pluralize(@user.articles.count, "Wiki post"), user_articles_search_path(@user) if @user.articles %><br>
            <%= link_to pluralize(@user.announcements.count, "Announcement"), user_announcements_search_path(@user) if @user.announcements %><br>
            <%= link_to pluralize(@user.socialposts.count, "Social Post"), user_socialposts_search_path(@user) if @user.socialposts %>
          </small>
        </div>
        <h5 class="resume">
          Resume: <%= @user.resume %>
        </h5>
        <span>
          <% if @user == current_user || current_user.admin? %>
            <%= link_to 'Edit profile', edit_user_path(@user), class: "btn btn-xs btn-primary" %>
          <% end %>
        </span>
         | 
        <span>
          <!-- check users/editlogin and devise/registrations/edit to check a comment about these 2 next if's -->
          <% if @user == current_user %>
            <%= link_to 'Edit details', edit_user_registration_path(current_user), class: "btn btn-xs btn-primary" %>
          <% end %>
          <% if @user != current_user and current_user.admin? %>
            <%= link_to 'Edit details', editlogin_path(@user), class: "btn btn-xs btn-primary" %>
          <% end %>
        </span>
      </div>
    </div>
  </div>
  </div>
</div>
    
      
