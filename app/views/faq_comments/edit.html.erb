<%= render 'layouts/errors', obj: @faq_comment %>

<div class="row">
  <div class="col-md-10 col-md-offset-1 col-xs-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div align="center">
          <h3><strong>Edit comment</strong></h3>
        </div>
      </div>
      <div class="panel-body">
        <%= simple_form_for ([@faq, @faq_comment]) do |f| %>
          <div class="container-fluid">
            <div class="form-group text-center">
              <div class ="form-group">
                <div class="col-xs-12">
                  <%= md_simple_editor do %>
                    <%= f.text_area :body, data: {behavior: "autocomplete"}, rows: 4, class: "form-control", placeholder: "Write the comment here" %>
                  <% end %>
                </div>
              </div>
              <div align ="center" class="comment-actions col-md-4 col-md-offset-4 col-xs-12">
                <%= f.button :button, "Update comment".html_safe, class: 'btn-success btn-block', data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Updating..."} %>
              </div>
            </div>
          </div>  
        <% end %>
      </div>
    </div>
  </div>  
</div>  
