
<%= render 'search' %>


<div id="users" class="results-blocks col-xs-10 col-xs-offset-1">
  <div class="panel panel-primary users-table">
    <!-- Default panel contents -->
    <div class="panel-heading">
      <div align="center">
        <h1>All users</h2>
      </div>
    </div>
    <!-- Table -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Role</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.username, user %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.first_name? %>
                <%= user.first_name %>
              <% else %>
                ------
              <% end %>
            </td>
            <td>
              <% if user.last_name? %>
                <%= user.last_name %>
              <% else %>
                ------
              <% end %>
            </td>
            <td><%= user.role %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



