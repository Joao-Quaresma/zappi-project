<%= render 'articles/errors', obj: @category %>

<div class='well col-xs-6 col-xs-offset-3 nice-border'>
  <div class='col-xs-8 col-xs-offset-2'>
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class ="form-group">
          <div class="control-label" align ="center">
            <%= f.label "New category name"%>
          </div>
          <div class="name">
            <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
          </div>
        </div>
        
          <div class ="form-group">
            <div align ="center" class="article-actions">
              <%= f.submit class: 'btn btn-primary' %>
            </div>
          </div>
        
    <% end %>
    <div align ="center" class="article-actions">
      [<%= link_to "Cancel and return the categries page", categories_path %>]
    </div>

  </div>
</div>  
