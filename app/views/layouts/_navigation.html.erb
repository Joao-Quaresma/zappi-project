        <% end %>
        <% if !user_signed_in? %>
          <li><%= link_to raw('Sign In <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>'), new_user_session_path %></li>
          <li><%= link_to raw('Sign Up <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>'), new_user_registration_path %></li>
