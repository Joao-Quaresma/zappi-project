<div id="comment">
    <hr>
    <div clas="user-name">
      <% if current_user.admin? || current_user.id == comment.user_id %>
        <%= link_to socialpost_comment_path(socialpost, comment), method: :delete, data: { confirm: "Are you sure?" }, remote: true do %>
          <span class="glyphicon glyphicon-remove delete-comment"></span>
        <% end %>
      <% end %>
      <%= link_to comment.user.username, user_path(comment.user) %> (<%= time_ago_in_words comment.created_at %> ago):
    </div>
    <div class="comment-content">
      <div style="word-wrap: break-word">
        <%= linked_users_comment markdownify comment.content %>
      </div>
    </div>
</div>
